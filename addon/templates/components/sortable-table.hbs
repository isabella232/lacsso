<thead>
  <tr>
    {{#each tableHeaders as | header idx|}}
      <th style="height:0;visibility:hidden;{{if header.width (concat 'width:' header.width ';')}}line-height:1px;padding:0;overflow:auto">
      </th>
    {{/each}}
  </tr>
  <tr>
    {{#each tableHeaders as | header |}}
        {{sortable-th
            current=sortBy
            descending=descending
            action="changeSort"
            name=header.name
            label=header.displayName
            classNames=header.classNames
            width=header.width}}
    {{/each}}
  </tr>
</thead>
<tbody>
  {{#each arranged as |content|}}
    <tr>
      {{#each tableHeaders as |header|}}
        <td data-title={{header.displayName}}>{{select-property content header.name}}</td>
      {{/each}}
    </tr>
  {{/each}}
</tbody>

